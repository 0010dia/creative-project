<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.Apart_price_indicesMapper">
    <resultMap type="persistence.dto.Apart_price_indicesDTO" id="result">
        <result column="id" property="id"/>
        <result column="region" property="region"/>
        <result column="date" property="date"/>
        <result column="price_indices" property="price_indices"/>
    </resultMap>
    <select id="selectAll" resultMap="result">
        SELECT * FROM Apart_price_indices
    </select>
    <insert id="insertPostOne" parameterType="persistence.dto.Apart_price_indicesDTO">
        INSERT INTO Apart_price_indices (id, region, date, price_indices) values (#{id},#{region},#{date},#{price_indices})
    </insert>
    <update id="updatePostOne" parameterType="persistence.dto.Apart_price_indicesDTO">
        UPDATE Apart_price_indices set region = #{region}, date = #{date}, price_indices = #{price_indices} where id = #{id}
    </update>
    <delete id="deletePostOne" parameterType="String" >
        DELETE FROM Apart_price_indices where id = #{id}
    </delete>
</mapper>
