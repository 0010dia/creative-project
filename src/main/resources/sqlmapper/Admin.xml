<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.AdminMapper">
    <resultMap id="result" type="persistence.dto.AdminDTO">
        <result property="admin_id" column="admin_id"/>
        <result property="admin_password" column="admin_password"/>
        <result property="admin_name" column="admin_name"/>
    </resultMap>
    <select id="selectAll" resultMap="result">
        select * from Admin;
    </select>
    <update id="updateAll" parameterType="persistence.dto.AdminDTO">
        update Admin set admin_password = #{admin_password}, admin_name = #{admin_name} where admin_id = #{admin_id}
    </update>
    <insert id="insert" parameterType="persistence.dto.AdminDTO">
        insert into Admin (admin_id, admin_password, admin_name) values (#{admin_id}, #{admin_password}, #{admin_name})
    </insert>
    <delete id="delete" parameterType="String">
        delete from Admin
        where admin_id = #{admin_id}
    </delete>
</mapper>
