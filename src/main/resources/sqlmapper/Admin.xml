<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.AdminMapper">
    <resultMap id="result" type="persistence.dto.AdminDTO">
        <id column="PNO" property="no" />
        <result property="admin_id" column="admin_id"/>
        <result property="admin_password" column="admin_password"/>
        <result property="admin_name" column="admin_name"/>
    </resultMap>
    <select id="selectAll" resultMap="result">
        select * FROM Admin;
    </select>
    <update id="updateAll">
        update Admin set admin_id = #{admin_id} , admin_password = #{admin_password}, admin_name = #{admin_name}
    </update>
    <insert id="insert">
        insert into Admin (admin_id, admin_password, admin_name) values (#{admin_id}, #{admin_password}, #{admin_name})
    </insert>
    <delete id="delete">
        delete from Admin
        where PNO = #{no}
    </delete>
</mapper>
