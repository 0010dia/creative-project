<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="mapper.UserMapper">
    <resultMap id="result" type="persistence.dto.UserDTO">
        <result property="user_id" column="user_id"/>
        <result property="user_password" column="user_password"/>
        <result property="user_name" column="user_name"/>
        <result property="user_email" column="user_email"/>
    </resultMap>
    <select id="selectAll" resultMap="result">
        select * from User;
    </select>
    <update id="updateAll" parameterType="persistence.dto.UserDTO">
        update User set user_password = #{user_password}, user_name = #{user_name}, user_email = #{user_email} where user_id = #{user_id}
    </update>
    <insert id="insert" parameterType="persistence.dto.UserDTO">
        insert into User (user_id, user_password, user_name, user_email) values (#{user_id}, #{user_password}, #{user_name}, #{user_email})
    </insert>
    <delete id="delete" parameterType="String">
        delete from User
        where user_id = #{user_id}
    </delete>
</mapper>
